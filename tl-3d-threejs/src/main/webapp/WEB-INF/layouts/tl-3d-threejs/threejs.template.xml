<?xml version="1.0" encoding="utf-8" ?>

<config:template
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	groups="commons"
>
	<properties extends="com.top_logic.mig.html.layout.WithDefaultFor, com.top_logic.layout.editor.config.ButtonTemplateParameters, com.top_logic.layout.editor.config.DialogTemplateParameters, com.top_logic.tool.boundsec.InAppSecurityObjectProviderConfig">
		<annotations>
			<display-inherited value="APPEND"/>
		</annotations>

		<property name="name"
			type="ResKey"
		>
			<mandatory/>
			<property-editor value="com.top_logic.layout.form.values.edit.editor.InternationalizationEditor"/>
			<item-display value="monomorphic"/>
		</property>
		<property name="model"
			instance-type="com.top_logic.layout.channel.linking.impl.ChannelLinking"
			type="com.top_logic.layout.ModelSpec"
		/>
		<property name="modelBuilder"
			instance-type="com.top_logic.threed.threejs.component.SceneBuilder"
			type="PolymorphicConfiguration"
		>
			<mandatory/>
		</property>
		<property name="selection"
			instance-type="com.top_logic.layout.channel.linking.impl.ChannelLinking"
			type="com.top_logic.layout.ModelSpec"
		/>
		<property name="multiSelection"
			type="boolean"
		/>
		<property name="securityObject"
			instance-type="com.top_logic.tool.boundsec.SecurityObjectProvider"
			type="com.top_logic.basic.config.PolymorphicConfiguration"
		/>
		<property name="securityProviderClass"
			default="securityRoot"
			type="String"
		>
			<options fun="com.top_logic.layout.form.values.edit.DefaultSecurityProviderKeys"/>
			<hidden/>
		</property>
		<property name="buttons"
			element-type="com.top_logic.tool.boundsec.CommandHandler$ConfigBase"
			type="List"
		>
			<acceptable-classifiers value="form, commons"/>
		</property>
	</properties>

	<component class="com.top_logic.threed.threejs.component.ThreeJsComponent"
		name="3DView"
		securityObject="${securityObject}"
		securityProviderClass="${securityProviderClass}"
		titleKey="${name}"
		modelBuilder="${modelBuilder}"
		defaultFor="${defaultFor}"
		dialogs="${dialogs}"
		model="${model}"
		selection="${selection}"
		multiSelection="${multiSelection}"
	>
		<buttons>
			${buttons}
			
			<button id="zoomToSelection" class="com.top_logic.threed.threejs.component.ZoomToSelectionCommand"
				group="System"
				image="css:bi bi-zoom-in"
			>
				<resourceKey key="dynamic.b69eea1e-eddd-4bc5-889a-db7f4b4317ef">
					<de>Zur Selektion fliegen</de>
					<en>Fly to selection</en>
				</resourceKey>
			</button>
			
			<include name="templates/editComponentCommands.xml"/>
		</buttons>
	</component>
</config:template>
