<?xml version="1.0" encoding="utf-8" ?>

<config:template
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	groups="commons"
>
	<properties extends="com.top_logic.layout.structure.ToolbarOptions, com.top_logic.mig.html.layout.WithDefaultFor, com.top_logic.layout.editor.config.ButtonTemplateParameters, com.top_logic.layout.editor.config.DialogTemplateParameters, com.top_logic.tool.boundsec.InAppSecurityObjectProviderConfig, com.top_logic.tool.boundsec.WithSecurityMaster, com.top_logic.threed.threejs.component.ThreeJsComponent$InAppViewerConfig">
		<annotations>
			<display-inherited value="APPEND"/>
		</annotations>

		<property name="name"
			type="ResKey"
		>
			<mandatory/>
			<property-editor value="com.top_logic.layout.form.values.edit.editor.InternationalizationEditor"/>
			<item-display value="monomorphic"/>
		</property>
		<property name="model"
			instance-type="com.top_logic.layout.channel.linking.impl.ChannelLinking"
			type="com.top_logic.layout.ModelSpec"
		/>
		<property name="modelBuilder"
			instance-type="com.top_logic.threed.threejs.component.SceneBuilder"
			type="PolymorphicConfiguration"
		>
			<mandatory/>
		</property>
		<property name="selection"
			instance-type="com.top_logic.layout.channel.linking.impl.ChannelLinking"
			type="com.top_logic.layout.ModelSpec"
		/>
		<property name="multiSelection"
			type="boolean"
		/>
		<property name="securityObject"
			instance-type="com.top_logic.tool.boundsec.SecurityObjectProvider"
			type="com.top_logic.basic.config.PolymorphicConfiguration"
		/>
		<property name="securityProviderClass"
			default="securityRoot"
			type="String"
		>
			<options fun="com.top_logic.layout.form.values.edit.DefaultSecurityProviderKeys"/>
			<hidden/>
		</property>
		<property name="buttons"
			element-type="com.top_logic.tool.boundsec.CommandHandler$ConfigBase"
			type="List"
		>
			<acceptable-classifiers value="3DViewer, form, commons"/>
		</property>
	</properties>

	<three-js-viewer name="3DView"
		apply-script="${apply-script}"
		applyCommand="applyTransform"
		coordinate-systems="${coordinate-systems}"
		defaultFor="${defaultFor}"
		dialogs="${dialogs}"
		isSecurityMaster="${isSecurityMaster}"
		model="${model}"
		modelBuilder="${modelBuilder}"
		securityObject="${securityObject}"
		selection="${selection}"
		showMaximize="${showMaximize}"
		showMinimize="${showMinimize}"
		showPopOut="${showPopOut}"
		titleKey="${name}"
	>
		<selectionModelFactory multiple="${multiSelection}"/>
		<buttons>
			${buttons}
			<include name="templates/editComponentCommands.xml"/>
			<button id="rotateMode"
				activeCssClasses=""
				activeImage="css:fa-solid fa-arrow-rotate-right"
				class="com.top_logic.threed.threejs.component.ToggleRotateAxes"
				executability="InEditMode"
				group="System"
				image="css:fa-solid fa-arrow-right-arrow-left"
			>
				<resourceKey key="dynamic.67bd3d24-fa90-40ee-a975-1f5c255a824e">
					<de>Schieben</de>
					<en>Move</en>
				</resourceKey>
				<activeResourceKey key="dynamic.ff181d05-3e29-4f2d-9e61-0226a489105e">
					<de>Drehen</de>
					<en>Rotate</en>
				</activeResourceKey>
			</button>
			<button id="addSkybox"
				activeImage="css:fa-solid fa-cube"
				class="com.top_logic.threed.threejs.component.ToggleSkyboxCommand"
				image="css:fa-solid fa-cube"
			>
				<resourceKey key="dynamic.810af728-de7c-4df8-a8b8-5b655fc4d864">
					<en>Show Skybox</en>
					<de>Skybox einblenden</de>
				</resourceKey>
				<activeResourceKey key="dynamic.70698648-740b-4ad8-9013-8a60c8fd1835">
					<en>Hide Skybox</en>
					<de>Skybox ausblenden</de>
				</activeResourceKey>
			</button>
			<button id="toggleObjectsTransparent"
				activeImage="css:bi bi-transparency"
				class="com.top_logic.threed.threejs.component.ToggleObjectsTransparentCommand"
				group="System"
				image="css:bi bi-transparency"
			>
				<resourceKey key="dynamic.4171b17b-36fc-4798-bae6-244affa2b7df">
					<en>Make objects transparent</en>
					<de>Objekte transparent machen</de>
				</resourceKey>
				<activeResourceKey key="dynamic.87240c27-825a-4115-b657-59b82d0129ce">
					<en>Make objects opaque</en>
					<de>Objekte undurchsichtig machen</de>
				</activeResourceKey>
			</button>
			<button id="addWorkplane"
				activeImage="css:bi bi-grid-3x3 tl-danger"
				class="com.top_logic.threed.threejs.component.ToggleWorkplaneCommand"
				group="System"
				image="css:bi bi-grid-3x3"
			>
				<resourceKey key="dynamic.4f78bb6c-0176-41e6-ba2a-6426d5b04562">
					<de>Arbeitsebene einblenden</de>
					<en>Show workplane</en>
				</resourceKey>
				<activeResourceKey key="dynamic.9f925589-c31d-4493-bb14-a127a5d4d020">
					<de>Arbeitsebene ausblenden</de>
					<en>Hide workplane</en>
				</activeResourceKey>
			</button>
			<button id="zoomToSelection"
				class="com.top_logic.threed.threejs.component.ZoomToSelectionCommand"
				group="System"
				image="css:bi bi-zoom-in"
			>
				<resourceKey key="dynamic.b69eea1e-eddd-4bc5-889a-db7f4b4317ef">
					<de>Zur Selektion fliegen</de>
					<en>Fly to selection</en>
				</resourceKey>
			</button>
			<button id="zoomOutFromSelection"
				class="com.top_logic.threed.threejs.component.ZoomOutFromSelectionCommand"
				group="System"
				image="css:bi bi-zoom-out"
			>
				<resourceKey key="dynamic.329fc91e-90e5-4f67-869b-ad52c2216dae">
					<de>Vom Selektion weg fliegen</de>
					<en>Zoom out from selection</en>
				</resourceKey>
			</button>

			<include name="templates/editComponentCommands.xml"/>
		</buttons>
	</three-js-viewer>
</config:template>